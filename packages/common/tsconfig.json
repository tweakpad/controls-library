{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "outDir": "lib/esm",
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "stripInternal": true,
    "lib": [
      "dom",
      "es5",
      "es6",
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}